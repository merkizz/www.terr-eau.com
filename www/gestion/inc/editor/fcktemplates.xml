<Templates imagesBasePath="fck_template/images/">
	<Template title="Image et titre" image="template1.gif">
		<Description>Une image principale avec un titre et du texte encadrant l'image.</Description>
		<Html>
			<![CDATA[
				<img style="MARGIN-RIGHT: 10px" height="100" alt="" width="100" align="left"/>
				<h3>Titre ici</h3>
				Texte ici
			]]>
		</Html>
	</Template>
	<Template title="Deux colonnes" image="template2.gif">
		<Description>Deux colonnes ayant chacune un titre et du texte.</Description>
		<Html>
			<![CDATA[
				<table cellspacing="0" cellpadding="0" width="100%" border="0">
					<tbody>
						<tr>
							<td width="50%">
							<h3>Titre 1</h3>
							</td>
							<td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; </td>
							<td width="50%">
							<h3>Titre 2</h3>
							</td>
						</tr>
						<tr>
							<td>Texte 1</td>
							<td>&nbsp;</td>
							<td>Texte 2</td>
						</tr>
					</tbody>
				</table>
				Plus de texte ici.
			]]>
		</Html>
	</Template>
	<Template title="Texte et Tableau" image="template3.gif">
		<Description>Un titre avec du texte et un tableau.</Description>
		<Html>
			<![CDATA[
				<table align="left" width="80%" border="0" cellspacing="0" cellpadding="0"><tr><td>
					<h3>Titre ici</h3>
					<p>
					<table style="FLOAT: right" cellspacing="0" cellpadding="0" width="150" border="1">
						<tbody>
							<tr>
								<td align="center" colspan="3"><strong>Titre Tableau</strong></td>
							</tr>
							<tr>
								<td>&nbsp;</td>
								<td>&nbsp;</td>
								<td>&nbsp;</td>
							</tr>
							<tr>
								<td>&nbsp;</td>
								<td>&nbsp;</td>
								<td>&nbsp;</td>
							</tr>
							<tr>
								<td>&nbsp;</td>
								<td>&nbsp;</td>
								<td>&nbsp;</td>
							</tr>
							<tr>
								<td>&nbsp;</td>
								<td>&nbsp;</td>
								<td>&nbsp;</td>
							</tr>
						</tbody>
					</table>
					Texte ici</p>
				</td></tr></table>
			]]>
		</Html>
	</Template>
</Templates>
